<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="350">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label
            Background="Wheat" 
            Content="0" 
            Grid.ColumnSpan="4"
            FontSize="80"
            Margin="5"
            HorizontalContentAlignment="Right"
            x:Name="resultLabel"/>

        <Button Content="AC"
            Background="LightGray"
            Margin="5"
            Grid.Row="1"
            Click="OpButton_Click"/>
        <Button Content="+/1"
            Background="LightGray"
            Margin="5"
            Grid.Column="1"
            Grid.Row="1"
            Click="OpButton_Click"/>
        <Button Content="%"
            Background="LightGray"
            Margin="5"
            Grid.Column="2"
            Grid.Row="1"
            Click="OpButton_Click"/>
        <Button Content="/"
            Background="LightGray"
            Margin="5"
            Grid.Column="3"
            Grid.Row="1"
            Click="OpButton_Click"/>
        <Button Content="7"
            Background="LightGray"
            Margin="5"
            Grid.Column="0"
            Grid.Row="2"
            Click="numberButton_Click"/>
        <Button Content="8"
            Background="LightGray"
            Margin="5"
            Grid.Column="1"
            Grid.Row="2"
            Click="numberButton_Click"/>
        <Button Content="9"
            Background="LightGray"
            Margin="5"
            Grid.Column="2"
            Grid.Row="2"
            Click="numberButton_Click"/>
        <Button Content="*"
            Background="LightGray"
            Margin="5"
            Grid.Column="3"
            Grid.Row="2"
            Click="OpButton_Click"/>
        <Button Content="4"
            Background="LightGray"
            Margin="5"
            Grid.Column="0"
            Grid.Row="3"
            Click="numberButton_Click"/>
        <Button Content="5"
            Background="LightGray"
            Margin="5"
            Grid.Column="1"
            Grid.Row="3"
            Click="numberButton_Click"/>
        <Button Content="6"
            Background="LightGray"
            Margin="5"
            Grid.Column="2"
            Grid.Row="3"
            Click="numberButton_Click"/>
        <Button Content="7"
            Background="LightGray"
            Margin="5"
            Grid.Column="3"
            Grid.Row="3"
            Click="OpButton_Click"/>
        <Button Content="-"
            Background="LightGray"
            Margin="5"
            Grid.Column="3"
            Grid.Row="3"/>
        <Button Content="1"
            Background="LightGray"
            Margin="5"
            Grid.Column="0"
            Grid.Row="4"
            Click="numberButton_Click"/>
        <Button Content="2"
            Background="LightGray"
            Margin="5"
            Grid.Column="1"
            Grid.Row="4"
            Click="numberButton_Click"/>
        <Button Content="3"
            Background="LightGray"
            Margin="5"
            Grid.Column="2"
            Grid.Row="4"
            Click="numberButton_Click"/>
        <Button Content="+"
            Background="LightGray"
            Margin="5"
            Grid.Column="3"
            Grid.Row="4"
            Click="OpButton_Click"/>
        <Button Content="0"
            Background="LightGray"
            Margin="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"                
            Grid.Row="5"
            Click="numberButton_Click"/>
        <Button Content=","
            Background="LightGray"
            Margin="5"
            Grid.Column="2"               
            Grid.Row="5"
            Click="OpButton_Click"/>
        <Button Content="="
            Background="LightGray"
            Margin="5"
            Grid.Column="3"               
            Grid.Row="5"
            x:Name="eqButton"
            Click="eqButton_Click"/>
    </Grid>
</Window>
